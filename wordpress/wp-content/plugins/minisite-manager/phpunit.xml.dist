<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  bootstrap="tests/bootstrap.php"
  stopOnFailure="false"
  colors="true"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.5/phpunit.xsd"
>
  <!-- What to measure (the filter) -->
  <source>
    <include>
      <directory suffix=".php">src</directory>
    </include>
    <exclude>
      <directory suffix=".php">vendor</directory>
      <directory suffix=".php">tests</directory>
      <directory suffix=".twig">templates</directory>
    </exclude>
  </source>

  <!-- How to report coverage (only when coverage flags are used) -->
  <!-- Coverage is not generated by default to avoid CI failures when extension is missing -->
  <!-- Use coverage-text or coverage-html to enable coverage -->

  <testsuites>
    <testsuite name="Unit">
      <directory>tests/Unit</directory>
    </testsuite>
    <testsuite name="Integration">
      <directory>tests/Integration</directory>
      <!-- Exclude abstract base test classes - they cannot be executed as tests themselves.
           Child classes that extend these base classes will still work correctly:
           - Base class setUp() is called via parent::setUp()
           - Base class code is executed and covered when child tests run
           - Only prevents PHPUnit from trying to execute the abstract class directly -->
      <exclude>tests/Integration/BaseIntegrationTest.php</exclude>
      <exclude>tests/Integration/Infrastructure/Migrations/Doctrine/AbstractDoctrineMigrationTest.php</exclude>
      <exclude>tests/Integration/Features/ConfigurationManagement/BaseConfigurationManagementIntegrationTest.php</exclude>
    </testsuite>
  </testsuites>


  <!-- BypassFinals extension disabled - we've removed final from classes that need mocking -->
  <!-- This prevents Patchwork conflicts with coverage tools -->
  <!-- <extensions>
    <bootstrap class="DG\BypassFinals\PHPUnitExtension">
      <parameter name="bypassFinal" value="true"/>
      <parameter name="bypassReadOnly" value="false"/>
    </bootstrap>
  </extensions> -->

  <php>
    <env name="MYSQL_HOST" value="127.0.0.1"/>
    <env name="MYSQL_PORT" value="3307"/>
    <env name="MYSQL_DATABASE" value="minisite_test"/>
    <env name="MYSQL_USER" value="minisite"/>
    <env name="MYSQL_PASSWORD" value="minisite"/>
  </php>
</phpunit>
