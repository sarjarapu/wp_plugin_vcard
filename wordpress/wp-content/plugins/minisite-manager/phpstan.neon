parameters:
  level: 5
  paths:
    - src
  excludePaths:
    - tests
    - vendor
  ignoreErrors:
    - '#Function .* not found#'
    - '#Constant .* not found#'
    - '#PHPDoc tag .* references unknown parameter#'
    - '#Right side of && is always false#'
    - '#Negated boolean expression is always true#'
    - '#Result of \|\| is always true#'
    - '#Property .* is never read, only written#'
    - '#Method .* has invalid return type WP_Query#'
  bootstrapFiles:
    - tests/bootstrap.php
  parallel:
    processTimeout: 300.0
  tmpDir: build/phpstan
