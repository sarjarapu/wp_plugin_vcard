{% extends "layouts/minisite-form-layout.twig" %}

{% block form_content %}
  <!-- Quick Navigation -->
  <div class="bg-[var(--surface)] rounded-2xl ring-1 ring-[var(--outline-variant)] p-6 mb-6">
    <h3 class="text-lg font-semibold text-[var(--on-surface)] mb-4">Quick Navigation</h3>
    <div class="flex flex-wrap gap-2">
      <a href="#seo-section" class="inline-flex items-center px-3 py-1.5 text-sm bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--primary)] hover:text-[var(--on-primary)] transition">SEO</a>
      <a href="#brand-section" class="inline-flex items-center px-3 py-1.5 text-sm bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--primary)] hover:text-[var(--on-primary)] transition">Brand</a>
      <a href="#hero-section" class="inline-flex items-center px-3 py-1.5 text-sm bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--primary)] hover:text-[var(--on-primary)] transition">Hero</a>
      <a href="#about-section" class="inline-flex items-center px-3 py-1.5 text-sm bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--primary)] hover:text-[var(--on-primary)] transition">About</a>
      <a href="#contact-section" class="inline-flex items-center px-3 py-1.5 text-sm bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--primary)] hover:text-[var(--on-primary)] transition">Contact</a>
      <a href="#products-section" class="inline-flex items-center px-3 py-1.5 text-sm bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--primary)] hover:text-[var(--on-primary)] transition">Products</a>
      <a href="#social-section" class="inline-flex items-center px-3 py-1.5 text-sm bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--primary)] hover:text-[var(--on-primary)] transition">Social</a>
      <a href="#gallery-section" class="inline-flex items-center px-3 py-1.5 text-sm bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--primary)] hover:text-[var(--on-primary)] transition">Gallery</a>
    </div>
  </div>

  <!-- SEO Section -->
  {% include "forms/seo-section.twig" %}

  <!-- Brand Section -->
  {% include "forms/brand-section.twig" %}

  <!-- Hero Section -->
  {% include "forms/hero-section.twig" %}

  <!-- About Section -->
  {% include "forms/about-section.twig" %}

  <!-- WhyUs Section -->
  {% include "forms/whyus-section.twig" %}

  <!-- Contact Section -->
  {% include "forms/contact-section.twig" %}

  <!-- Products & Services Section -->
  {% include "forms/products-section.twig" %}

  <!-- Social Media Section -->
  {% include "forms/social-section.twig" %}

  <!-- Gallery Section -->
  {% include "forms/gallery-section.twig" %}

{% endblock %}

{% block sidebar_content %}
  <!-- Action Buttons -->
  <div class="bg-[var(--surface)] rounded-2xl ring-1 ring-[var(--outline-variant)] p-6">
    <h3 class="text-lg font-semibold text-[var(--on-surface)] mb-4">Actions</h3>
    <div class="space-y-3">
      <button type="submit" id="create-minisite-button" class="w-full inline-flex items-center justify-center px-4 py-3 bg-[var(--primary)] text-[var(--on-primary)] rounded-lg hover:bg-[var(--primary)]/90 transition">
        <i id="create-icon" class="fa-solid fa-plus mr-2"></i>
        <span id="create-text">Create Minisite</span>
        <div id="create-loading" class="hidden ml-2">
          <i class="fa-solid fa-spinner fa-spin"></i>
        </div>
      </button>
      <a href="/account/sites" class="w-full inline-flex items-center justify-center px-4 py-3 bg-[var(--surface-1)] text-[var(--on-surface)] rounded-lg hover:bg-[var(--surface)] transition">
        <i class="fa-solid fa-arrow-left mr-2"></i>
        Back to Sites
      </a>
    </div>
  </div>

  <!-- Preview Section -->
  <div class="bg-[var(--surface)] rounded-2xl ring-1 ring-[var(--outline-variant)] p-6">
    <h3 class="text-lg font-semibold text-[var(--on-surface)] mb-4">Preview</h3>
    <div class="text-center text-[var(--on-surface-variant)]">
      <i class="fa-solid fa-eye text-4xl mb-2"></i>
      <p class="text-sm">Preview will be available after creating the minisite</p>
    </div>
  </div>
{% endblock %}
