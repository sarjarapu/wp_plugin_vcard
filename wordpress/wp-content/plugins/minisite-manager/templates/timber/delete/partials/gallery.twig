<section>
  <h2>Gallery</h2>
  <div class="grid">
    {% for img in profile.siteJson.gallery|default([]) %}
      <figure>
        <img src="{{ img.src }}" alt="{{ img.alt|default('') }}" loading="lazy" />
        {% if img.caption %}<figcaption class="muted">{{ img.caption }}</figcaption>{% endif %}
      </figure>
    {% endfor %}
  </div>
</section>

