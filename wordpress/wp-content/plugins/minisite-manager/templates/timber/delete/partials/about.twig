<section>
  <h2>About</h2>
  {% if profile.siteJson.about is defined and profile.siteJson.about %}
    {% if profile.siteJson.about.html is defined %}
      <div>{{ profile.siteJson.about.html|raw }}</div>
    {% elseif profile.siteJson.about.text is defined %}
      <p>{{ profile.siteJson.about.text }}</p>
    {% else %}
      <p>{{ profile.industry }} — {{ profile.palette }}</p>
    {% endif %}
  {% else %}
    <p>{{ profile.industry }} — {{ profile.palette }}</p>
  {% endif %}
</section>

