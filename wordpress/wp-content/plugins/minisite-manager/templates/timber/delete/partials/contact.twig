<section>
  <h2>Contact</h2>
  <p>Country: {{ profile.countryCode }}</p>
  {% if profile.postalCode %}
    <p>Postal: {{ profile.postalCode }}</p>
  {% endif %}

  {% if profile.siteJson.contact is defined %}
    {% set c = profile.siteJson.contact %}
    {% if c.phone is defined %}<p>Phone: <a href="tel:{{ c.phone }}">{{ c.phone }}</a></p>{% endif %}
    {% if c.email is defined %}<p>Email: <a href="mailto:{{ c.email }}">{{ c.email }}</a></p>{% endif %}
    {% if c.address is defined %}
      <p>Address: {{ c.address }}</p>
    {% endif %}
    {% if c.hours is defined and c.hours %}
      <h3>Hours</h3>
      <ul>
        {% for h in c.hours %}
          <li>{{ h.day }}: {{ h.open }} - {{ h.close }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endif %}

  {% if profile.geo.lat and profile.geo.lng %}
    <p class="muted">Lat: {{ profile.geo.lat }}, Lng: {{ profile.geo.lng }}</p>
  {% endif %}
</section>

