<section>
  <h2>Reviews</h2>
  {% for r in profile.siteJson.reviews|default([]) %}
    <article>
      <strong>{{ r.author }}</strong>
      {% if r.rating is defined %}<span> — ★ {{ r.rating }}</span>{% endif %}
      {% if r.date is defined %}<time datetime="{{ r.date }}" class="muted">{{ r.date }}</time>{% endif %}
      <p>{{ r.text }}</p>
    </article>
  {% endfor %}
</section>

