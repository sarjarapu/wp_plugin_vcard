              <address class="not-italic text-[var(--on-surface)]">
                <div>{{ profile.name }}</div>
                <div>{{ profile.siteJson.contact.address_line1|default(profile.siteJson.contact.address|default('')) }}</div>
                <div>{{ profile.siteJson.contact.address_line2|default('') }}</div>
                {% if profile.siteJson.contact.address_line3|trim is not empty %}
                <div>{{ profile.siteJson.contact.address_line3|default('') }}</div>
                {% endif %}
