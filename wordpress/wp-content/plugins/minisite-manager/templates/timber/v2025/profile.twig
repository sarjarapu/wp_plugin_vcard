                  <li class="flex items-center gap-3">
                    <i class="fa-solid fa-globe text-violet-500 text-xl"></i>
                    <span>Website URL: <a href="{{ w_link }}" class="text-primary font-medium" target="_blank" rel="noopener">{{ w_text ?: w_link }}</a></span>
                  </li>
                {% endif %}

                <li class="flex items-center gap-3">
                  <i class="fa-solid fa-location-dot text-sky-500 text-xl"></i>
                  <span>Map: <a href="#map" class="text-primary font-medium">Open Map</a></span>
                </li>

                <li class="flex items-center gap-3">
                  <i class="fa-solid fa-share-nodes text-amber-500 text-xl"></i>
                  <span>Share: <button id="shareBtn2" class="text-primary font-medium underline">Share this page</button></span>
                </li>
                <li class="flex items-center gap-3 pt-3">
                  <a href="#request-info" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-[var(--primary)] text-[var(--on-primary)] hover:brightness-95">
