    <footer class="py-10 pt-20 rounded-b-xl 
      bg-[var(--inverse-surface)] text-[var(--inverse-on-surface)]
      dark:bg-[var(--section-a-bg)] dark:text-[var(--on-surface)]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="border-t border-white/10 py-8 text-sm">
          <p>Powered by <strong><a href="https://digitalxcutives.com/" target="_blank" class="underline text-[var(--inverse-on-surface)]">Digital Xcutives Pvt Ltd.</a></strong></p>
          <p class="mt-2">&copy; 2025 Digital Xcutives. All rights reserved.</p>
        </div>
      </div>
    </footer>
    
  </div>

  <!-- Floating Back-To-Top -->
  <button
    id="backToTop"
    type="button"
    aria-label="Back to top"
    class="fixed bottom-6 right-6 z-50 hidden opacity-0 translate-y-2 rounded-full h-12 w-12
           shadow-[0_10px_30px_-10px_rgba(0,0,0,0.5)] bg-[var(--primary)] text-[var(--on-primary)]
           ring-1 ring-black/5 hover:opacity-95 transition duration-200">
    <i class="fa-solid fa-arrow-up"></i>
    <span class="sr-only">Back to top</span>
  </button>

  <!-- ======= Behavior JS (Theme, Palettes, Sticky Nav, Share, Parallax BGs) ======= -->
  <script>
    // Helpers
    const root = document.documentElement;
    const byId = (id) => document.getElementById(id);
    const safeOn = (id, evt, fn) => { const el = byId(id); if (el) el.addEventListener(evt, fn); };

    // Theme persistence
    const setDark = (on) => {
      root.classList.toggle('dark', on);
      localStorage.setItem('theme', on ? 'dark' : 'light');
    };
    (() => {
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme) setDark(savedTheme === 'dark');
      else setDark(window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches);
      const savedPalette = localStorage.getItem('palette');
      if (savedPalette) root.setAttribute('data-theme', savedPalette);
    })();

    // Theme toggles
    const toggleTheme = () => setDark(!root.classList.contains('dark'));
    safeOn('themeToggle', 'click', toggleTheme);
    safeOn('themeToggleMobile', 'click', toggleTheme);
    safeOn('stickyTheme', 'click', toggleTheme);

    // Palette switchers
    document.querySelectorAll('.palette').forEach(btn => {
      btn.addEventListener('click', () => {
        const t = btn.getAttribute('data-theme');
        root.setAttribute('data-theme', t);
        localStorage.setItem('palette', t);
      });
    });

    // Mobile menu
    const mobileMenu = byId('mobileMenu');
    safeOn('openMenu', 'click', () => mobileMenu && mobileMenu.classList.remove('hidden'));
    const closeMenu = () => mobileMenu && mobileMenu.classList.add('hidden');
    safeOn('closeMenu', 'click', closeMenu);
    safeOn('closeMenuBtn', 'click', closeMenu);
    if (mobileMenu) mobileMenu.querySelectorAll('a').forEach(a => a.addEventListener('click', closeMenu));

    // Sticky nav + Back-to-top
    const sticky = byId('stickyNav');
    const backToTop = byId('backToTop');
    const STICKY_THRESHOLD = 100;
    const TOP_THRESHOLD = 300;

    function show(el) {
      if (!el) return;
      el.classList.remove('hidden');
      requestAnimationFrame(() => el.classList.remove('opacity-0','translate-y-2'));
    }
    function hide(el) {
      if (!el) return;
      el.classList.add('opacity-0','translate-y-2');
      setTimeout(() => { if (el.classList.contains('opacity-0')) el.classList.add('hidden'); }, 200);
    }
    const onScroll = () => {
      const y = window.scrollY || document.documentElement.scrollTop || 0;
      if (sticky) y > STICKY_THRESHOLD ? sticky.classList.remove('hidden') : sticky.classList.add('hidden');
      if (backToTop) y > TOP_THRESHOLD ? show(backToTop) : hide(backToTop);
    };
    document.addEventListener('scroll', onScroll, { passive: true });

    // Back-to-top click
    if (backToTop) {
      backToTop.addEventListener('click', (e) => {
        e.preventDefault();
        const reduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        window.scrollTo({ top: 0, behavior: reduced ? 'auto' : 'smooth' });
      });
    }

    // Share
    async function sharePage() {
      const data = { title: document.title, text: 'Check out this business profile!', url: window.location.href };
      if (navigator.share) { try { await navigator.share(data); } catch(e) {} }
      else {
        try { await navigator.clipboard.writeText(window.location.href); alert('Link copied to clipboard!'); }
        catch { prompt('Copy this link:', window.location.href); }
      }
    }
    safeOn('shareBtn', 'click', sharePage);
    safeOn('shareBtn2', 'click', sharePage);

    // Background images per industry (band-2 only here)
    (function () {
      const INDUSTRY_IMAGES = {
        transport: {
          band2: 'https://images.unsplash.com/photo-1498084393753-b411b2d26b34?auto=format&fit=crop&w=1600'
        },
        restaurant: {
          band2: 'https://images.unsplash.com/photo-1551218808-94e220e084d2?auto=format&fit=crop&w=1600'
        },
        services: {
          band2: 'https://images.unsplash.com/photo-1521737852567-6949f3f9f2b5?auto=format&fit=crop&w=1600'
        },
        textile: {
          band2: 'https://images.unsplash.com/photo-1504089879190-820eb03ca34e?auto=format&fit=crop&w=1600'
        }
      };
      const industry = root.getAttribute('data-industry') || 'services';
      const url = INDUSTRY_IMAGES[industry]?.band2;
      const el = document.getElementById('band-2');
      if (el && url) {
        el.style.backgroundImage = `url('${url}')`;
        el.style.backgroundSize = 'cover';
        el.style.backgroundPosition = 'center';
      }
    })();

    // Gallery lightbox
    (function () {
      const lightbox = document.getElementById('galleryLightbox');
      const imgEl = document.getElementById('glb-image');
      const capEl = document.getElementById('glb-caption');
      const prevBtn = document.getElementById('glb-prev');
      const nextBtn = document.getElementById('glb-next');
      const items = Array.from(document.querySelectorAll('#gallery-grid [data-gallery-index]'));
      if (!lightbox || !imgEl || !capEl || items.length === 0) return;

      const closeEls = lightbox.querySelectorAll('[data-glb-close]');
      const data = items.map(a => ({ src: a.getAttribute('href'), cap: a.getAttribute('data-caption') || '' }));
      let idx = 0;
      const open = (i) => {
        idx = (i + data.length) % data.length;
        imgEl.src = data[idx].src;
        imgEl.alt = data[idx].cap;
        capEl.textContent = data[idx].cap;
        lightbox.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      };
      const show = (i) => open(i);
      const close = () => { lightbox.classList.add('hidden'); document.body.style.overflow = ''; };

      items.forEach((a, i) => a.addEventListener('click', (e) => { e.preventDefault(); open(i); }));
      if (prevBtn) prevBtn.addEventListener('click', () => show(idx - 1));
      if (nextBtn) nextBtn.addEventListener('click', () => show(idx + 1));
      closeEls.forEach(el => el.addEventListener('click', close));
      lightbox.addEventListener('click', (e) => { if (e.target === lightbox) close(); });
      document.addEventListener('keydown', (e) => {
        if (lightbox.classList.contains('hidden')) return;
        if (e.key === 'Escape') close();
        if (e.key === 'ArrowLeft') show(idx - 1);
        if (e.key === 'ArrowRight') show(idx + 1);
      });
    })();

    // Initialize scroll state on load
    onScroll();
  </script>
</body>
