              <label class="block text-sm font-medium mb-1 text-[var(--on-surface)]" for="message">Message</label>
              <textarea id="message" rows="5" placeholder="How can we help?"
                        class="w-full rounded-lg bg-[var(--surface-1)] text-[var(--on-surface)]
                               border border-[var(--outline-variant)] px-4 py-3
                               focus:outline-none focus:ring-2 focus:ring-[var(--primary)]/30"></textarea>
