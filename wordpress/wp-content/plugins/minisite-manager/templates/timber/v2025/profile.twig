                    <i class="fa-solid fa-phone text-emerald-500 text-xl"></i>
                    <span>Call Us: <a href="tel:{{ phone_link }}" class="text-primary font-medium">{{ phone_text ?: phone_link }}</a></span>
                  </li>
                {% endif %}

                {% set wa_link = profile.siteJson.contact.whatsapp.link|default('')|trim %}
                {% set wa_text = profile.siteJson.contact.whatsapp.text|default('')|trim %}
                {% if wa_link or wa_text %}
                  <li class="flex items-center gap-3">
                    <i class="fa-brands fa-whatsapp text-green-500 text-xl"></i>
                    <span>WhatsApp: <a href="https://wa.me/{{ wa_link }}" class="text-primary font-medium">{{ wa_text ?: wa_link }}</a></span>
