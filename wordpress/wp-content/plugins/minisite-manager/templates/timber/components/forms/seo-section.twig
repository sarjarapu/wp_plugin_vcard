<!-- SEO Section -->
<div id="seo-section" class="rounded-2xl ring-1 ring-[var(--outline-variant)] bg-[var(--surface-0)] p-6 pb-8 mb-4">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-semibold text-[var(--on-surface)]">SEO & Meta</h2>
    <a href="#" class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-[var(--surface-1)] text-[var(--primary)] ring-1 ring-[var(--outline-variant)] hover:bg-[var(--surface)] transition" title="Back to top">
      <i class="fa-solid fa-arrow-up text-sm"></i>
    </a>
  </div>
  <div class="space-y-4">
    <div>
      <label for="seo_title" class="block text-sm font-medium mb-1 text-[var(--on-surface)]">Minisite Title</label>
      <input id="seo_title" name="seo_title" type="text" value="{{ site_json.seo.title|default(profile.title) }}"
        data-field="seo.title" class="w-full rounded-lg bg-[var(--surface-1)] text-[var(--on-surface)] border border-[var(--outline-variant)] px-4 py-3"/>
    </div>
    <div>
      <label for="seo_description" class="block text-sm font-medium mb-1 text-[var(--on-surface)]">Meta Description</label>
      <textarea id="seo_description" name="seo_description" rows="3"
        data-field="seo.description" class="w-full rounded-lg bg-[var(--surface-1)] text-[var(--on-surface)] border border-[var(--outline-variant)] px-4 py-3">{{ site_json.seo.description|default('') }}</textarea>
    </div>
    <div>
      <label for="seo_keywords" class="block text-sm font-medium mb-1 text-[var(--on-surface)]">Keywords</label>
      <input id="seo_keywords" name="seo_keywords" type="text" value="{{ site_json.seo.keywords|default('') }}"
        data-field="seo.keywords" class="w-full rounded-lg bg-[var(--surface-1)] text-[var(--on-surface)] border border-[var(--outline-variant)] px-4 py-3"/>
    </div>
    <div>
      <label for="seo_favicon" class="block text-sm font-medium mb-1 text-[var(--on-surface)]">Favicon URL</label>
      <input id="seo_favicon" name="seo_favicon" type="url" value="{{ site_json.seo.favicon|default('') }}"
        data-field="seo.favicon" class="w-full rounded-lg bg-[var(--surface-1)] text-[var(--on-surface)] border border-[var(--outline-variant)] px-4 py-3"/>
    </div>
  </div>
</div>
