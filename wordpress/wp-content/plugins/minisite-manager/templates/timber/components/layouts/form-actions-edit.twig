<!-- Form Actions -->
<div class="mt-6 pt-4 border-t border-[var(--outline-variant)]">
  <div class="flex items-center gap-3">
    <a href="{{ function('home_url','/account/sites') }}"
      class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg bg-[var(--surface-1)] text-[var(--on-surface)] ring-1 ring-[var(--outline-variant)] hover:bg-[var(--surface)] text-sm font-medium">
      Cancel
    </a>
    <button type="submit" id="save-draft-button" name="action" value="save_draft"
      class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg bg-[var(--primary)] text-[var(--on-primary)] shadow hover:brightness-95 disabled:opacity-50 disabled:cursor-not-allowed text-sm font-medium">
      <i class="fa-solid fa-save" id="save-icon"></i> 
      <span id="save-text">Save Draft</span>
      <span id="save-loading" class="hidden">
        <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Saving...
      </span>
    </button>
  </div>
</div>
